<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Bill Total with Tax:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="38dp"
        android:text="Tip Percentage:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:text="Tip Amount:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Total with Tip:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="210dp"
        android:layout_marginStart="408dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/system_neutral1_100"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:text=" Number of People:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:text="Total per Person:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/clear"
        android:layout_width="725dp"
        android:layout_height="38dp"
        android:layout_weight="1"
        android:text="CLEAR"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TipAmount"
        android:layout_width="144dp"
        android:layout_height="34dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="66dp"
        android:background="#F3F2F3"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/Totalwithtip"
        android:layout_width="145dp"
        android:layout_height="34dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:background="#F3F2F3"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:context=".RadioButtonActivity">

        <RadioButton
            android:id="@+id/rdbpercentage_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/purple_700"
            android:textSize="16sp"
            android:onClick="onRadioButtonClicked"
            android:text="12%" />

        <RadioButton
            android:id="@+id/rdbpercentage_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:buttonTint="@color/purple_700"
            android:onClick="onRadioButtonClicked"
            android:text="15%" />

        <RadioButton
            android:id="@+id/rdbpercentage_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/purple_700"
            android:textSize="16sp"
            android:onClick="onRadioButtonClicked"
            android:text="18%" />

        <RadioButton
            android:id="@+id/rdbpercentage_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/purple_700"
            android:textSize="16sp"
            android:onClick="onRadioButtonClicked"
            android:text="20%" />


    </RadioGroup>

    <TextView
        android:id="@+id/Totalperperson"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="92dp"
        android:background="#F3F2F3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/TotalBillInput"
        android:layout_width="181dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:background="#e9fce9"
        android:ems="10"
        android:textSize="16sp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:text="GO"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/PeopleCount" />

    <EditText
        android:id="@+id/PeopleCount"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="24dp"
        android:background="#e9fce9"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>